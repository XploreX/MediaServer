  <script>

    $(document).ready(() => {
      const startText = 'Start Server';
      const stopText = 'Stop Server'
      let btn = $("#serverstate");
      $.ajax({
        url: '/api/status',
        success: (res) => {
          if (res == 'OK')
            btn[0].innerHTML = stopText;
          else if (res == 'FAIL')
            btn[0].innerHTML = startText;

        }
      })
      btn.click(() => {
        console.log(btn[0].innerHTML)
        if (btn[0].innerHTML.trim() == startText) {
          btn[0].innerHTML = "Starting...";
          $.ajax({
            url: '/api/start', success: (res) => {
              if (res === "OK") {
                btn[0].innerHTML = stopText
              }
            }
          });
        }
        else {
          btn[0].innerHTML = "Stopping...";
          $.ajax({
            url: '/api/stop', success: (res) => {
              if (res === "OK") {
                btn[0].innerHTML = startText
              }
            }
          });
        }
      })
      $("#clearlogs").click(() => {
        $.ajax({
          url: '/api/clearlogs', success: (res) => {
            if (res === "OK") {
            }
          }
        });
      });
      function reloadIframe() {
        $.ajax({
          url: '/logs', dataType: "html", success: (res) => {
            let objDiv = $("#clientlogs")[0];
            var result = $('<div />').append(res).html();
            objDiv.innerHTML = res;
            objDiv.scrollTop = objDiv.scrollHeight;
          }
        });
      }
      var reload = setInterval(reloadIframe, 1000);
      $("#clientlogs").hover(function () {
        clearInterval(reload);
      }, function () {
        clearInterval(reload);
        reload = setInterval(reloadIframe, 1000);
      });
    })
  </script>
