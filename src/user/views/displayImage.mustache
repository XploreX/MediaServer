<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>
        {{imageName}}
    </title>
</head>

<body class="container-fluid pt-3 bg-dark text-light">

    <div class="col align-items-center">
        <div class="row">
            <div class="col text-left align-self-center">
                <a id="previous" type="button">
                    <img src="previousImageSource" class="img-thumbnail" onclick="decreaseCurrentFileIndex()">
                </a>
            </div>
            <div class="col-10 text-center align-self-center">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <kbd class="d-flex justify-content-center">
                                <h3 id="imageName" class="align-self-center"> imageName </h3>
                                <a id="home_page" type="button" class="m-3 btn btn-success" href=".">Go Back to
                                    Directory</a>
                            </kbd>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <img id="current" src="imageSource" class='img-fluid'>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col text-right align-self-center">
                <a id="next" type="button">
                    <img src="nextImageSource" class="img-thumbnail" onclick="increaseCurrentFileIndex()">
                </a>
            </div>
        </div>
    </div>
    <script>
        let files = [];
        {{#files}}
        files.push("{{{.}}}");
        {{/files}}

        let currentFileIndex = {{currentFileIndex}};
         //console.log(files);
    </script>
    <script>
            let currentImage = document.querySelector('#current');
            let imageName = document.querySelector('#imageName');
            let previousImage = document.querySelector('#previous img');
            let nextImage = document.querySelector('#next img');
    </script>
    <script>
            function baseName(str)
            {
                var base = new String(str).substring(str.lastIndexOf('/') + 1); 
                    if(base.lastIndexOf(".") != -1)       
                        base = base.substring(0, base.lastIndexOf("."));
                return base;
            }
            function setCurrentImage(imageIndex) {
                let imageSource = '/public' +  files[imageIndex];
                currentImage.setAttribute('src', imageSource);
                imageName.innerHTML=baseName(files[imageIndex]);
                document.title=imageName.innerHTML;
            }

            function setPreviousImage(imageIndex) {
                console.log(previousImage);
                if (imageIndex < 0) {
                    previousImage.style.visibility = 'hidden';
                    return;
                }
                previousImage.style.visibility = 'visible';
                let imageSource = '/public' + files[imageIndex];
                previousImage.setAttribute('src', imageSource);
                console.log(previousImage);
            }

            function setNextImage(imageIndex) {
                if (imageIndex > files.length - 1) {
                    nextImage.style.visibility = 'hidden';
                    return;
                }
                nextImage.style.visibility = 'visible';
                let imageSource = '/public' + files[imageIndex];
                //console.log(imageSource);
                nextImage.setAttribute('src', imageSource);
            }
            
            function setImages(currentIndex) {
                setCurrentImage(currentIndex);
                setPreviousImage(currentIndex - 1);
                setNextImage(currentIndex + 1);
            }
    </script>
    <script>
            function decreaseCurrentFileIndex(){
                currentFileIndex = Math.max(0,currentFileIndex-1);
                setImages(currentFileIndex);
            }
            function increaseCurrentFileIndex(){
                currentFileIndex = Math.min(files.length-1,currentFileIndex+1);
                setImages(currentFileIndex);
            }
            setImages(currentFileIndex);
            document.addEventListener('keydown', (event) => {
                console.log(event);
                if (event.isComposing || event.keyCode == 229) {
                    return;
                }
                if (event.key === 'ArrowLeft') {
                    decreaseCurrentFileIndex();
                }
                else if (event.key === 'ArrowRight') {
                    increaseCurrentFileIndex();
                }
            })
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous">
        </script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</body>

</html>